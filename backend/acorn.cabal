cabal-version:       2.2
name:                acorn
version:             0.1
synopsis:            A calculator and library with provably correct Agda reals.
description:
  An agda2hs-compatible implementation of Krebbersâ€“Spitters reals, focusing on usability.

-- Ouch... these need to be listed.
extra-source-files:  acorn.agda-lib,
                     src/All.agda,
                     src/Algebra/*.agda,
                     src/Function/*.agda,
                     src/HaskellInstance/*.agda,
                     src/Implementation/*.agda,
                     src/Operator/*.agda,
                     src/RealTheory/*.agda,
                     src/RealTheory/Instance/*.agda,
                     src/Shell/*.agda,
                     src/Shell/Platform/*.agda,
                     src/Test/*.agda,
                     src/Test/Haskell/*.agda,
                     src/Tool/*.agda

custom-setup
  setup-depends:
    base     >= 4.13    && < 4.20,
    Cabal    >= 2.2,
    -- this is my custom version of agda2hs; see cabal.project
    -- agda2hs,
    process

library
  -- it only searches online and not among local packages;
  -- which is ugly because I use the version on my own machine
  -- so I'll just comment this out for now
  -- build-depends:       agda2hs >= 1.3 && < 2.0
  build-depends:       base     >= 4.13    && < 4.20,
                       containers,
                       text,
                       deepseq >= 1.4
  if os(windows)
    build-depends:     Win32 >= 2.12
  elif os(linux) || os(darwin)
    build-depends:     unix >= 2.8
  hs-source-dirs:      src
  autogen-modules:     Operator.Abs,
                       Operator.Pow,
                       Operator.ExactShift,
                       Operator.Cast,
                       Operator.ShiftL,
                       Operator.Decidable,
                       Operator.Shift,
                       Tool.ErasureProduct,
                       Tool.Stream,
                       Tool.Witness,
                       HaskellInstance.Show,
                       HaskellInstance.NFData,
                       Algebra.SemiRing,
                       Algebra.Setoid,
                       Algebra.Ring,
                       Algebra.Order,
                       Algebra.Field,
                       RealTheory.Completion,
                       RealTheory.Instance.Pow,
                       RealTheory.Instance.Cast,
                       RealTheory.AppRational,
                       RealTheory.MetricSpace,
                       RealTheory.Real,
                       RealTheory.Continuity,
                       Shell.Exp,
                       Shell.Evaluation,
                       Shell.Statement,
                       Shell.CalcState,
                       Shell.Parser,
                       Shell.Value,
                       Shell.Interaction,
                       -- this is written directly in a .hs
                       -- to be able to use the C preprocessor
                       -- Shell.Platform,
                       Implementation.Frac,
                       Implementation.Decimal,
                       Implementation.Rational,
                       Implementation.Int,
                       Implementation.Nat,
                       Implementation.Dyadic,
                       Function.AlternatingSeries,
                       Function.Exp,
                       Function.SquareRoot,
                       Function.Trigonometric,
                       All
  exposed-modules:     Operator.Abs,
                       Operator.Pow,
                       Operator.ExactShift,
                       Operator.Cast,
                       Operator.ShiftL,
                       Operator.Decidable,
                       Operator.Shift,
                       Tool.ErasureProduct,
                       Tool.Stream,
                       Tool.Witness
                       HaskellInstance.Show,
                       HaskellInstance.NFData,
                       Algebra.SemiRing,
                       Algebra.Setoid,
                       Algebra.Ring,
                       Algebra.Order,
                       Algebra.Field,
                       RealTheory.Completion,
                       RealTheory.Instance.Pow,
                       RealTheory.Instance.Cast,
                       RealTheory.AppRational,
                       RealTheory.MetricSpace,
                       RealTheory.Real,
                       RealTheory.Continuity,
                       Shell.Exp,
                       Shell.Evaluation,
                       Shell.Statement,
                       Shell.CalcState,
                       Shell.Parser,
                       Shell.Value,
                       Shell.Interaction,
                       Shell.Platform,
                       Implementation.Frac,
                       Implementation.Decimal,
                       Implementation.Rational,
                       Implementation.Int,
                       Implementation.Nat,
                       Implementation.Dyadic,
                       Function.AlternatingSeries,
                       Function.Exp,
                       Function.SquareRoot,
                       Function.Trigonometric,
                       All
  if os(windows)
    autogen-modules:   Shell.Platform.Win32
    exposed-modules:   Shell.Platform.Win32
  elif os(linux) || os(darwin)
    autogen-modules:   Shell.Platform.Posix
    exposed-modules:   Shell.Platform.Posix
  default-language:    GHC2021
  -- for interrupting the calculation thread
  -- with a foreign call
  ghc-options:         -threaded

executable AcornShell
  hs-source-dirs:      src
  main-is:             Main.hs
  -- it only searches online and not among local packages;
  -- which is ugly because I use the version on my own machine
  -- so I'll just comment this out for now
  -- build-depends:       agda2hs >= 1.3 && < 2.0,
  build-depends:       base     >= 4.13    && < 4.20,
                       containers,
                       text,
                       deepseq >= 1.4,
                       acorn
  if os(windows)
    build-depends:     Win32 >= 2.12
  elif os(linux) || os(darwin)
    build-depends:     unix >= 2.8
  default-language:    GHC2021
  -- for interrupting the calculation thread
  -- with a foreign call
  ghc-options:         -threaded

test-suite AcornQuickCheck
  type:                exitcode-stdio-1.0
  hs-source-dirs:      src
  main-is:             TestMain.hs
  other-modules:       Test.Haskell.Parser
  build-depends:       base     >= 4.13    && < 4.20,
                       containers,
                       text,
                       deepseq >= 1.4,
                       acorn,
                       QuickCheck >= 2.14
  default-language:    GHC2021
